<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/search_result_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/search_result_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/search_result_destination_default"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:shadowColor="@color/black"
        android:shadowDx="2.2"
        android:shadowDy="2.2"
        android:shadowRadius="3.0"/>

    <TextView
        android:id="@+id/search_result_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/search_result_price_default"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:shadowColor="@color/black"
        android:shadowDx="2.2"
        android:shadowDy="2.2"
        android:shadowRadius="3.0"/>

</RelativeLayout>